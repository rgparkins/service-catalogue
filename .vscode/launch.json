{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch api",
      "program": "${workspaceFolder}/src/api/app/bin/www",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "env":{
        "MONGODB_ATLAS_URI": "mongodb://localhost:27017"
      }
    },
    {
      "name": "Debug Vite Dev Server",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}/src/web",
      "env": {
        "VITE_SERVICE_METADATA_URL": "http://localhost:3000/services/metadata"
      },
      "console": "integratedTerminal"
    },
        {
      "name": "Debug Vite local file",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}/src/web",
      "console": "integratedTerminal"
    }
  ]
}